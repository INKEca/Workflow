<BIOGRAPHY SEX="FEMALE" PERSON="BRWWRITER"><ORLANDOHEADER TYPE="text"><FILEDESC><TITLESTMT><DOCTITLE>Ellis Cornelia Knight : biography</DOCTITLE></TITLESTMT><PUBLICATIONSTMT><AUTHORITY>Orlando Project</AUTHORITY></PUBLICATIONSTMT><SOURCEDESC>Created from original research by members of the Orlando Project</SOURCEDESC></FILEDESC><REVISIONDESC><RESPONSIBILITY RESP="MPO" WORKSTATUS="SUB" WORKVALUE="I"><DATE>11 January 2010</DATE><ITEM>Initial document given to tagger.</ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>18 February 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>19 February 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>3 March 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>5 March 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>10 March 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>24 June 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="IMG" WORKSTATUS="RBV" WORKVALUE="I"><DATE>5 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>5 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>8 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>13 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>13 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="IMG" WORKSTATUS="RBV" WORKVALUE="I"><DATE>13 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKSTATUS="RWT" WORKVALUE="I"><DATE>14 July 2010</DATE><ITEM></ITEM></RESPONSIBILITY><RESPONSIBILITY RESP="LJH" WORKS